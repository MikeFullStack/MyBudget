rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Top-level Match for Collection Group Query (Shared Budgets)
    // "budgets" can be nested under any user, so we use a recursive wildmatch for rules?
    // Actually, Collection Group queries require rules that match the collection ID regardless of path.
    
    match /{path=**}/budgets/{budget} {
      // Helper function to check participation
      function isParticipant() {
        return resource.data.participants != null && request.auth.token.email in resource.data.participants;
      }

      function isOwner() {
        return resource.data.ownerId == request.auth.uid;
      }

      // Read & Update: Owner OR Participant
      allow read, update: if request.auth != null && (isOwner() || isParticipant());

      // Create: Must be the owner of the new document
      allow create: if request.auth != null && request.resource.data.ownerId == request.auth.uid;

      // Delete: Owner ONLY
      allow delete: if request.auth != null && isOwner();
    }
    
    // Fallback for user data (Artifacts style)
    match /artifacts/{appId}/users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
